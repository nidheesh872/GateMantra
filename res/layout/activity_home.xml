<!--         android:layout_height="wrap_content" -->
<!--         android:layout_below="@id/news" -->
<!--         android:background="@drawable/oval_blue_gradient" -->
<!--         android:text="@string/about"  -->
<!--         android:textSize="20dp"/> -->
</RelativeLayout>
</ScrollView>





